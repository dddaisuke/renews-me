<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>Stemming</servlet-name>
		<servlet-class>me.renews.StemmingServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>TextStemming</servlet-name>
		<servlet-class>me.renews.TextStemmingServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Stemming</servlet-name>
		<url-pattern>/stemming</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>TextStemming</servlet-name>
		<url-pattern>/text_stemming</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
